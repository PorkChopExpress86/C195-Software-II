<AnchorPane prefHeight="248.0" prefWidth="363.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Login">
    <children>
        <Label fx:id="lblTitle" alignment="CENTER" layoutX="68.0" layoutY="14.0" text="Scheduler Login">
            <font>
                <Font size="32.0" />
            </font>
        </Label>
        <BorderPane layoutX="21.0" layoutY="82.0" prefHeight="178.0" prefWidth="313.0">
            <center>
                <GridPane prefHeight="95.0" prefWidth="387.0" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <TextField fx:id="tbUsername" promptText="Username" GridPane.columnIndex="1" />
                        <Label fx:id="lblUsername" text="Username" />
                        <Label fx:id="lblPassword" text="Password" GridPane.rowIndex="1" />
                        <PasswordField fx:id="pfPassword" prefHeight="24.0" prefWidth="211.0" promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#onActionLogin" text="Login" GridPane.rowIndex="2" />
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onActionCancel" text="Cancel" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                    </children>
                </GridPane>
            </center>
        </BorderPane>
      <Label fx:id="regionCode" alignment="CENTER" layoutX="65.0" layoutY="61.0" prefHeight="17.0" prefWidth="233.0" text="regionCode" textAlignment="CENTER" />
    </children>
</AnchorPane>
